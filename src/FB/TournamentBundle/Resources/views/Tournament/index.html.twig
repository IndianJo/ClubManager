{# src\FB\TournamentBundle\Resources\views\Tournament\index.html.twig #}

{% extends "FBClubManagerBundle::layout.html.twig" %}
{% block title %}
    Accueil Tournament Manager - {{ parent() }}
{% endblock %}

{% block headerWelcome %}
    Welcom in Tournament Manager
{% endblock %}
{% block headerMessage %}
    <p> Ce module permet de gérer les tournois jouer par le club</p>
{% endblock %}
{% block breacrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path ('fb_clubmanager_home') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="active">Tournois</li>
    </ol>
{% endblock %}
{% block fbclubmanager_body %}

    <h2>Liste des tournois</h2>
    <div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.name, "Saisons : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.name) }}
            <div class="col-sm-4">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
           {{ form_widget(form.filter, {'attr': {'class': 'btn btn-primary' } }) }}
        </div>

    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »).
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
    </div>
    <div>
        <div class="panel-group" id="accordion">
            {% for tournament in listTournament %}
            <div class="panel panel-default">
                <div class="panel-heading">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th data-field="name">Nom</th>
                                    <th data-field="place">Lieu</th>
                                    <th data-field="date">Date</th>
                                    <th data-field="category">Catégory</th>
                                    <th data-field="division">Division</th>
                                    <th data-field="surface">surface</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ tournament.name }}</td>
                                        <td>{{ tournament.address }} {{ tournament.city }} {{ tournament.country }}</td>
                                        <td>Du {{ tournament.startDate|localizeddate('medium','none', 'fr') }} au {{ tournament.endDate|date('d-m') }}</td>
                                        <td>{{ tournament.category }}</td>
                                        <td>{{ tournament.division }}</td>
                                        <td>{{ tournament.surface }}</td>
                                        <td>
                                            <a class="accordion-toggle" data-toggle="collapse-next" data-parent="#accordion">
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">joueurs</button>
                                            </a>

                                            {% if is_granted('ROLE_MEMBER') %}
                                                <a class="btn btn-default" type="button" href="{{ path('fb_tournament_update', {'id': tournament.id}) }}">
                                                    <span class="glyphicon glyphicon-pencil"></span>
                                                </a>
                                                <a class="btn btn-danger" type="button" href="{{ path('fb_tournament_delete', {'id': tournament.id}) }}" onclick="return confirm('Etes-vous sûr de vouloir supprimer cet élément ?')">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                </div>
                <div class="panel-collapse collapse">
                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                            <tr>
                            </thead>
                            <tbody>
                            {% for player in tournament.players %}
                                <tr>
                                    <td>{{ player.lastname }}</td>
                                    <td>{{ player.firstname }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}