{# src\FB\TournamentBundle\Resources\views\Season\form.html.twig#}

<div class="well">
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.name) }}
        <div class="col-sm-2">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group has-feedback has-feedback-left">
        {{ form_label(form.startDate, "Date de début", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.startDate) }}
        <div class="col-sm-3">
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control datepicker'}}) }}
            <i class="form-control-feedback glyphicon glyphicon-calendar"></i>
        </div>
        {{ form_label(form.endDate, "Date de fin", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.endDate) }}
        <div class="col-sm-3">
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control datepicker' }}) }}
            <i class="form-control-feedback glyphicon glyphicon-calendar"></i>
        </div>
    </div>
    <div class="form-group">
        <div class="span6 text-center">
            {{ form_widget(form.Save, {'label': 'Sauvegarder', 'attr': {'class': 'btn btn-primary col-sm-' } }) }}
            <a class="btn btn-primary" type="button" href="{{ path('fb_tournament_home') }}">Annuler</a>
        </div>
    </div>

    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »).
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>