{# src\FB\ClubManagerBundle\Resources\views\flashbag.html.twig#}

{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
{#        {%if type == 'error'%} {% set type = 'danger' %} {%endif%}

        {% switch type %}
        {% case "error" %}
            {% set type = 'danger' %}
        {% case "notice" %}
            {% set type = 'info' %}
        {% default %}
            {% set type = 'info' %}
        {% endswitch %}#}
        <div class="alert alert-{{ type }}">
            {{ message|raw }}
        </div>
    {% endfor %}
{% endfor %}
