{# src\FB\SessionManagerBundle\Resources\views\Team\form.html.twig #}

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.name) }}
        <div class="col-sm-2">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.players, "Joueurs", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.players) }}
        <div class="col-sm-2">
            {{ form_widget(form.players, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="span7 text-center">
        {{ form_widget(form.save, {'label': 'Sauvegarder', 'attr': { 'class': 'btn btn-primary' } }) }}

        {{ form_widget(form.saveaddmore, {'label': 'Sauvegarder et ajouter une équipe', 'attr': {'class': 'btn btn-primary' } }) }}
    </div>
    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>
