{# src\FB\SessionManagerBundle\Resources\views\SessionManager\form.html.html.twig#}

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group has-feedback has-feedback-left">
        {{ form_label(form.trainingStart, "Début de la séance", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.trainingStart) }}
        <div class="col-sm-2">
            {{ form_widget(form.trainingStart, {'attr': {'class': 'form-control datepicker'}}) }}
            <i class="form-control-feedback glyphicon glyphicon-calendar"></i>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.teams, "Liste des équipes", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.teams) }}
        {{ form_widget(form.teams, {'attr': {'class': 'col-sm-4 tokenize-sample'}}) }}
    </div>

    <div class="form-group">
        <div class="span6 text-center">
            {{ form_widget(form.save, {'label': 'Sauvegarder', 'attr': {'class': 'btn btn-primary col-sm-' } }) }}
            <a class="btn btn-primary" type="button" href="{{ path('fb_session_home') }}">Annuler</a>
        </div>
    </div>

    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »).
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>
