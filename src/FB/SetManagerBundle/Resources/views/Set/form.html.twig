{# src\FB\SetManagerBundle\Resources\views\Set\form.html.twig#}
<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group form-group-sm">
        {{ form_label(form.number, "Numéro", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.number) }}
        <div class="col-sm-3">
            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_label(form.player, "Joueur", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
        {{ form_errors(form.player) }}
        <div class="col-sm-3">
            {{ form_widget(form.player, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_widget(form.save, { 'label': 'Sauvegarder', 'attr': {'class': 'col-sm-2 btn btn-sm btn-primary' } }) }}
    </div>
    <div class="form-group form-group-sm">
        {{ form_label(form.size, "Taille", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.size) }}
        <div class="col-sm-3">
            {{ form_widget(form.size, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_label(form.sexe, "Sexe", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
        {{ form_errors(form.sexe) }}
        <div class="col-sm-3">
            {{ form_widget(form.sexe, {'attr': {'class': 'form-control'}}) }}
        </div>

        <a class="btn btn-sm btn-primary col-sm-2" type="default" href="{{ path('fb_setmanager_home') }}">Annuler</a>
    </div>

    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »).
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>
